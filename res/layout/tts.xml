<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_height="fill_parent" android:layout_width="fill_parent">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/title_tts"></TextView>
<EditText android:layout_height="wrap_content" android:minLines="4" android:layout_width="fill_parent" android:id="@+id/text_ttsSource" android:text="This is a test. This is only a test." android:gravity="top|left"></EditText>
<Spinner android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/spin_ttsVoice" android:entries="@array/arr_ttsVoices"></Spinner>
<Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/btn_startTts" android:text="@string/button_startTts"></Button>
<Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/button_stop" android:id="@+id/btn_stopTts"></Button>
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/text_currentTts"></TextView>
</LinearLayout>
